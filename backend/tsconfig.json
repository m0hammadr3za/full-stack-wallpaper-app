{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "src",
    "paths": {
      "@src/*": ["*"],
      "@api/*": ["api/*"],
      "@controllers/*": ["api/controllers/*"],
      "@middleware/*": ["api/middleware/*"],
      "@models/*": ["api/models/*"],
      "@routes/*": ["api/routes/*"],
      "@services/*": ["api/services/*"],
      "@validations/*": ["api/validations/*"],
      "@config/*": ["config/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
